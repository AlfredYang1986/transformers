# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Elogco.index
GET     /index                      	controllers.Elogco.index
GET		/company						controllers.Elogco.company
GET		/business						controllers.Elogco.business
GET		/recruit						controllers.Elogco.recruit
GET		/help							controllers.Elogco.help

# register page
GET     /register/company		        controllers.RegisterController.register
GET		/register/driver				controllers.RegisterController.registerDriver
GET		/register/complete				controllers.RegisterController.registerComplete

# admin pages
GET		/admin/login					controllers.AdminController.adminLogin
GET		/admin							controllers.AdminController.index
GET		/admin/index					controllers.AdminController.index
GET		/admin/company/pass				controllers.AdminController.passCompanyPage
GET		/admin/industry/pass			controllers.AdminController.passIndustryPage
GET		/admin/specialway/pass			controllers.AdminController.passSpecialwayPage
GET		/admin/driver/pass				controllers.AdminController.passDriverPage
GET		/admin/company/faild			controllers.AdminController.faildCompanyPage
GET		/admin/industry/faild			controllers.AdminController.faildIndustryPage
GET		/admin/specialway/faild			controllers.AdminController.faildSpecialwayPage
GET		/admin/driver/faild				controllers.AdminController.faildDriverPage
GET		/admin/company/certificating	controllers.AdminController.certificatingCompanyPage
GET		/admin/industry/certificating	controllers.AdminController.certificatingIndustryPage
GET		/admin/specialway/certificating	controllers.AdminController.certificatingSpecialwayPage
GET		/admin/driver/certificating		controllers.AdminController.certificatingDriverPage

# auth 
POST	/auth/register					controllers.AuthController.register
POST	/auth/driver/register			controllers.AuthController.driverRegister

# files
POST	/file/upload					controllers.FileController.upload
GET		/images/:name					controllers.FileController.downloadFile(name)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)
