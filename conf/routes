# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Elogco.index
GET     /index                      	controllers.Elogco.index
GET		/company						controllers.Elogco.company
GET		/business						controllers.Elogco.business
GET		/recruit						controllers.Elogco.recruit
GET		/help							controllers.Elogco.help

# register page
GET     /register/company		        controllers.RegisterController.register
GET		/register/driver				controllers.RegisterController.registerDriver
GET		/register/complete				controllers.RegisterController.registerComplete

# contract
GET		/contract/driver				controllers.ContractController.driverContract
GET		/contract/contract				controllers.ContractController.companyContract

# admin pages
GET		/admin/login					controllers.AdminController.adminLogin
GET		/admin							controllers.AdminController.adminLogin
GET		/admin/index/:t					controllers.AdminController.index(t)
GET		/admin/index					controllers.AdminController.index(t="")

GET 	/admin/profiles/:k/:s/:p/:t		controllers.AdminController.profiles(k, s, p, t)
GET 	/admin/profiles/:k/:s/:p		controllers.AdminController.profiles(k, s, p, t="")
GET 	/admin/profiles/:k/:s			controllers.AdminController.profiles(k, s, p="0", t="")

GET		/admin/send/car  				controllers.AdminController.adminSendCar
GET		/admin/sent/car  				controllers.AdminController.adminHaveSentCar
GET		/admin/car/history				controllers.AdminController.adminCarHistory
GET 	/admin/setting					controllers.AdminController.adminSetting

# driver login pages
GET		/driver/index  					controllers.DriverController.driverLoginIndex
GET		/driver/account/psw  			controllers.DriverController.driverLoginAccountPsw
GET		/driver/account/normalinfo		controllers.DriverController.driverLoginAccountNormalInfo
GET		/driver/account/validateinfo	controllers.DriverController.driverLoginAccountValidateInfo
GET		/driver/account/followed		controllers.DriverController.driverLoginAccountFollowedCompany
GET		/driver/recruitment				controllers.DriverController.driverLoginRecruitment
GET		/driver/search/company          controllers.DriverController.driverLoginSearchCompany
GET		/driver/search/department       controllers.DriverController.driverLoginSearchDepartment
GET		/driver/search/specialway       controllers.DriverController.driverLoginSearchSpecialWay

POST	/data/driver/search/company		controllers.DriverController.driverSearchCompany

# company industry login pages
GET		/company/index                  controllers.CompanyIndustryController.ciLoginIndex
GET		/company/account/extra          controllers.CompanyIndustryController.ciLoginAccountExtra
GET		/company/account/normalinfo     controllers.CompanyIndustryController.ciLoginAccountNormalInfo
GET		/company/account/people         controllers.CompanyIndustryController.ciLoginAccountPeople
GET		/company/account/productname    controllers.CompanyIndustryController.ciLoginAccountProductName
GET		/company/account/psw    		controllers.CompanyIndustryController.ciLoginAccountPsw
GET		/company/account/validateinfo   controllers.CompanyIndustryController.ciLoginAccountValidateInfo
GET		/company/companylist            controllers.CompanyIndustryController.ciLoginCompanyList
GET		/company/completeinfo           controllers.CompanyIndustryController.ciLoginCompleteInfo
GET		/company/completeproduct        controllers.CompanyIndustryController.ciLoginCompleteProduct
GET		/company/driverlist        		controllers.CompanyIndustryController.ciLoginDriverList
GET		/company/recruitment        	controllers.CompanyIndustryController.ciLoginRecruitment
GET		/company/sendinfo        		controllers.CompanyIndustryController.ciLoginSendInfo
GET		/company/sendproduct       		controllers.CompanyIndustryController.ciLoginSendProduct
GET		/company/sentinfo        		controllers.CompanyIndustryController.ciLoginSentInfo
GET		/company/sentproduct       		controllers.CompanyIndustryController.ciLoginSentProduct
GET		/company/specialwaylist    		controllers.CompanyIndustryController.ciLoginSpecialWayList
GET		/company/rewards    			controllers.CompanyIndustryController.ciLoginRewards

# special way login pages
GET		/specialway/index               controllers.SpecialWayController.swLoginIndex
GET		/specialway/account/extra       controllers.SpecialWayController.swLoginAccountExtra
GET		/specialway/account/normalinfo  controllers.SpecialWayController.swLoginAccountNormalInfo
GET		/specialway/account/people      controllers.SpecialWayController.swLoginAccountPeople
GET		/specialway/account/psw    		controllers.SpecialWayController.swLoginAccountPsw
GET		/specialway/account/validateinfo controllers.SpecialWayController.swLoginAccountValidateInfo
GET		/specialway/companylist         controllers.SpecialWayController.swLoginCompanyList
GET		/specialway/completeinfo        controllers.SpecialWayController.swLoginCompleteInfo
GET		/specialway/completeproduct     controllers.SpecialWayController.swLoginCompleteProduct
GET		/specialway/driverlist        	controllers.SpecialWayController.swLoginDriverList
GET		/specialway/recruitment        	controllers.SpecialWayController.swLoginRecruitment
GET		/specialway/sendinfo        	controllers.SpecialWayController.swLoginSendInfo
GET		/specialway/sendproduct     	controllers.SpecialWayController.swLoginSendProduct
GET		/specialway/sentinfo        	controllers.SpecialWayController.swLoginSentInfo
